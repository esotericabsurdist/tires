<resources>

    <!-- Base application theme. -->
    <style name="SpaceshipFreeholdTheme.Light" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/lightGrey</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:editTextBackground">@color/slightlyDarkerGrey</item>
        <item name="android:textColor">@color/veryDarkBlack</item>
        <item name="android:textColorHint">@color/darkGrey</item>
        <item name="android:textColorHighlight">@color/accentColor</item>
        <item name="android:popupBackground">@color/lightGrey</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationTransition</item>
        <item name="android:actionMenuTextColor">@color/veryDarkBlack</item>
        <item name="android:itemBackground">@color/lightGrey</item>
        <item name="android:itemTextAppearance">@color/veryDarkBlack</item>

    </style>

    <style name="SpaceshipFreeholdTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/veryDarkBlack</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:editTextBackground">@color/veryDarkGrey</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textColorHint">@color/darkGrey</item>
        <item name="android:textColorHighlight">@color/accentColor</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationTransition</item>
        <item name="android:itemBackground">@color/veryDarkGrey</item>
    </style>

    <style name="windowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="SpaceshipFreeholdTheme.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SpaceshipFreeholdTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="SpaceshipFreeholdTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
