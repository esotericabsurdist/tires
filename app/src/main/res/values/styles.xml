<resources>

    <style name="SpaceshipFreeholdTheme.Light" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/lightBackground</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:editTextBackground">@color/lightEditTextBackground</item>
        <item name="android:textColor">@color/darkBackGround</item>
        <item name="android:textColorHint">@color/lightEditTextHint</item>
        <item name="android:textColorHighlight">@color/accentColor</item>
        <item name="android:popupBackground">@color/lightBackground</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationTransition</item>
        <item name="android:actionMenuTextColor">@color/lightText</item>
        <item name="android:itemBackground">@color/lightBackground</item>
        <item name="android:itemTextAppearance">@color/darkBackGround</item>
        <item name="tabStyle">@style/TabLayout.Light</item>
     </style>

    <style name ="TabLayout.Light" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextColor" >@color/lightText</item>
        <item name="android:background">@color/lightTabsBackGround</item>
    </style>

    <style name="SpaceshipFreeholdTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/darkBackGround</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:editTextBackground">@color/darkEditTextBackground</item>
        <item name="android:textColor">@color/darkText</item>
        <item name="android:textColorHint">@color/darkEditTextHint</item>
        <item name="android:textColorHighlight">@color/accentColor</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationTransition</item>
        <item name="android:itemBackground">@color/darkEditTextBackground</item>
        <item name="tabStyle">@style/TabLayout.Dark</item>
     </style>

    <style name ="TabLayout.Dark" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextColor" >@color/darkText</item>
        <item name="android:background">@color/darkTabsBackGround</item>
    </style>

    <style name="windowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="SpaceshipFreeholdTheme.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SpaceshipFreeholdTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="SpaceshipFreeholdTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
